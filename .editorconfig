# EditorConfig

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = "utf-8"
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Dotfiles and misc config files
[.*, *.json, *.yml, *.yaml]
indent_size = 2
indent_style = space

# Python
[*.py]
indent_size = 4
indent_style = space

# JavaScript, PHP, Sass, CSS
[*.js, *.php, *.scss, *.sass, *.css]
indent_size = 4
indent_style = tab
